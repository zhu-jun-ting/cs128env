{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "exec",
			"command": "/usr/bin/make",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
		},
		{
			"type": "shell",
			"label": "debug exec",
			"command": "/bin/cp",
			"args": [
				"${workspaceFolder}/bin/exec",
				"/home/vagrant/bin/",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
		},
		{
			"type": "shell",
			"label": "tests",
			"command": "/usr/bin/make",
			"args": [
				"tests",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
		},
		{
			"type": "shell",
			"label": "debug tests",
			"command": "/bin/cp",
			"args": [
				"${workspaceFolder}/bin/tests",
				"/home/vagrant/bin/",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
		},
	]
}
